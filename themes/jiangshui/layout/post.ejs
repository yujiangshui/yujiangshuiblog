<div class="section-wrap section-main">
  <div class="section">
    <div class="typo blog-wrap">
      <h1><%= page.title %></h1>
      <div class="blog-meta">
        <time><%= date(page.date, 'YYYY/M/D') %></time>
        <div class="blog-cats">
          <% page.categories.each(function(cat){ %>
          <a href="<%= cat.permalink %>"><%= cat.slug %></a>
          <% }) %>
        </div>
        <div class="blog-tags">
          <% page.tags.each(function(tag){ %>
          <a href="<%= tag.permalink %>"><%= tag.slug %></a>
          <% }) %>
        </div>
      </div>
      <%- page.content %>
    </div>
    <script>
      // share functions
      share = new SimpleShare();
    </script>
    <div class="blog-share">
      <ul class="share-list">
        <li>
          <a class="icon icon-weibo" href="javascript:share.weibo();"
            ><span>weibo</span></a
          >
        </li>
        <li>
          <a class="icon icon-twitter" href="javascript:share.twitter();"
            ><span>twitter</span></a
          >
        </li>
        <li>
          <a class="icon icon-douban" href="javascript:share.douban();"
            ><span>douban</span></a
          >
        </li>
        <li>
          <a class="icon icon-qzone" href="javascript:share.qzone();"
            ><span>qzone</span></a
          >
        </li>
      </ul>
    </div>
  </div>
</div>
